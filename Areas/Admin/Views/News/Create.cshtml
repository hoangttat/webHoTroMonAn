@using WebOrderTbRestaurant.Models.EF

@{
    ViewBag.Title = "Thêm mới bài viết";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}


<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header charecter-style">Thêm mới bài viết</h1>
    </div>
</div>
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
            </div>
            <div class="panel-body">
                @using (Html.BeginForm("Create", "News", FormMethod.Post, new { id = "frmValidate", enctype = "multipart/form-data" }))
                {
                    <div class="form-group col-md-8">
                        <label>Tiêu đề bài viết</label>
                        <input type="text" class="form-control" name="Title" placeholder="Nhập tiêu đề bài viết">
                    </div>

                    <div class="form-group col-md-4">
                        <label>Hình ảnh đại diện bài viết</label>
                        <input type="file" name="Image" accept="image/*">
                    </div>

                    <div class="form-group col-md-12">
                        <label>Nội dung bài viết</label>
                        <textarea class="form-control" name="Description" id="Description" rows="3"></textarea>
                    </div>
                    <div class="form-group text-center">
                        <button type="submit" class="btn btn-default btn-lg">Thêm mới</button>
                    </div>
                }

            </div>
        </div>
    </div>
</div>


@section jsFooter{

    <script>
        $(document).ready(function () {

            CKEDITOR.replace("Description");

            //Khi bàn phím được nhấn và thả ra thì sẽ chạy phương thức này
            $("#frmValidate").validate({
                rules: {
                    Title: "required",
                    Image: "required",
                    Description: "required"
                },
                messages: {
                    Title: "Vui lòng nhập tên bài viết",
                    Image: "Vui lòng chọn hình ảnh bài viết",
                    Description: "Vui lòng nhập mô tả bài viết"
                }
            });
        });
    </script>

}