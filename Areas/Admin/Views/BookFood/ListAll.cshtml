@using PagedList;
@using PagedList.Mvc;
@using WebOrderTbRestaurant.Models.EF;
@{
    ViewBag.Title = "ListAll";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
    var i = 0;
    var fullname = (List<OrderTable>)ViewBag.FullName;
    var foodname = (List<Food>)ViewBag.FoodName;
}
@model PagedList.IPagedList<Book_Food>


<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">Thực đơn của toàn bộ khách hàng đã đặt trước </h1>
    </div>
    <!-- /.col-lg-12 -->
</div>

<!-- /.row -->
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                Danh sách thực đơn đã đặt bàn trước
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">
                <table width="100%" class="table table-striped table-bordered table-hover" id="dataTables-example">
                    <thead>
                        <tr>
                            <th>STT</th>
                            <th>Tên món ăn </th>
                            <th>Số lượng </th>
                            <th>Giá</th>
                            <th>Tên khách hàng</th>                            
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            i++;
                            <tr class="odd gradeX">
                                <td>@i</td>
                                @foreach (var food in foodname)
                                {
                                    if (item.Food_ID == food.ID)
                                    {
                                        <td>@food.Name</td>
                                        break;
                                    }
                                }

                                <td>@item.Count</td>
                                <td>@item.Price.Value.ToString("N0")</td>
                                @foreach (var or in fullname)
                                {
                                    if (item.OrderTable_ID == or.ID)
                                    {
                                        <td>@or.Full_Name</td>
                                        break;
                                    }
                                }                                
                            </tr>
                           
                        }

                    </tbody>
                    
                </table>
                <!-- /.table-responsive -->

            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>
    <!-- /.col-lg-12 -->
</div>
<!-- /.row -->
<div class="row">
        <div class="col-12">
            <div class="pagination-area d-sm-flex mt-15">
                <div class="page-status">
                    <p>Trang @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) / @Model.PageCount</p>
                </div>
                <nav aria-label="#">
                    @Html.PagedListPager(Model, page => Url.Action("ListAll", new { page }))
                </nav>
            </div>
        </div>
    </div>