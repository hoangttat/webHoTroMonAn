@using WebOrderTbRestaurant.Models.EF;
@{
    var news = ViewBag.News as News;
    ViewBag.Title = news.Title;
    Layout = "~/Views/Shared/_Layout.cshtml";

    var NavigatorNews = ViewBag.NavigatorNews as List<News>;
    var RecentNews = Session["RecentNews"] as List<News>;
}

    <div class="banner">
        <div class="container">
            <div class="row text-center">
                <p>Bài viết</p>
            </div>
        </div>
    </div>
<div class="breadcumb-nav">
    <div class="container">
        <div class="row">
            <div class="col-12">
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="/"><i class="fa fa-home" aria-hidden="true"></i> Trang chủ</a></li>
                        <li class="breadcrumb-item"><a href="#">Bài viết</a></li>
                        <li class="breadcrumb-item active" aria-current="page">@news.Title</li>
                    </ol>
                </nav>
            </div>
        </div>
    </div>
</div>
<!-- ****** Breadcumb Area End ****** -->
<!-- ****** Single Blog Area Start ****** -->
<section class="single_blog_area section_padding_80">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-12 col-lg-8">
                <div class="row no-gutters">

                    <!-- Single Post Share Info -->
                    <div class="col-2 col-sm-1">
                        @*<div class="single-post-share-info mt-100">
                            <a href="#" class="facebook"><i class="fa fa-facebook" aria-hidden="true"></i></a>
                            <a href="#" class="twitter"><i class="fa fa-twitter" aria-hidden="true"></i></a>
                            <a href="#" class="googleplus"><i class="fa fa-google-plus" aria-hidden="true"></i></a>
                            <a href="#" class="instagram"><i class="fa fa-instagram" aria-hidden="true"></i></a>
                            <a href="#" class="pinterest"><i class="fa fa-pinterest" aria-hidden="true"></i></a>
                        </div>*@
                    </div>

                    <!-- Single Post -->
                    <div class="col-10 col-sm-11">
                        <div class="single-post">
                            <!-- Post Thumb -->
                            <div class="post-thumb">
                                <img src="~/Assets/Client/img/news/@news.Image" alt="" style="width: 669px">
                            </div>
                            <!-- Post Content -->
                            <div class="post-content">
                                <div class="post-meta d-flex" style="margin-top: 25px">
                                    <div class="post-author-date-area d-flex">
                                        <!-- Post Author -->
                                        <div class="post-author">
                                            <a class="label label-primary">Quản trị viên</a>
                                        </div>
                                        <!-- Post Date -->
                                        <div class="post-date">
                                            <a>@news.CreatedDate.Value.ToString("dd"), tháng @news.CreatedDate.Value.ToString("MM, yyyy")</a>
                                        </div>
                                    </div>
                                </div>
                                <a>
                                    <h2 class="post-headline">@news.Title</h2>
                                </a>
                                @Html.Raw(news.Description)
                            </div>
                        </div>

                        

                        <!-- Related Post Area -->
                        <div class="related-post-area section_padding_50">
                            <h4 class="mb-30">Bài viết đã đọc</h4>

                            <div class="related-post-slider owl-carousel">

                                @foreach (var item in RecentNews)
                                {
                                    var url = "/bai-viet/" + item.Metatile.Trim() + "-" + item.ID;
                                    <div class="single-post">
                                        <!-- Post Thumb -->
                                        <div class="post-thumb">
                                            <img src="~/Assets/Client/img/news/@item.Image" style="width: 165px" alt="">
                                        </div>
                                        <!-- Post Content -->
                                        <div class="post-content">
                                            <div class="post-meta d-flex">
                                                <div class="post-author-date-area d-flex">
                                                    <!-- Post Date -->
                                                    <div class="post-date">
                                                        <a href="@url">@item.CreatedDate.Value.ToString("dd"), Tháng @item.CreatedDate.Value.ToString("MM, yyyy")</a>
                                                    </div>
                                                </div>
                                            </div>
                                            <a href="@url">
                                                <h6>@item.Title</h6>
                                            </a>
                                        </div>
                                    </div>
                                }
                                
                            </div>
                        </div>

                    </div>
                </div>
            </div>

            <!-- ****** Blog Sidebar ****** -->
            <div class="col-12 col-sm-8 col-md-6 col-lg-4">
                <div class="blog-sidebar mt-5 mt-lg-0">

                    <!-- Single Widget Area -->
                    <div class="single-widget-area popular-post-widget">
                        <div class="widget-title text-center">
                            <h6>Bài viết hay</h6>
                        </div>

                        @foreach (var item in NavigatorNews)
                        {
                            var url = "/bai-viet/" + item.Metatile.Trim() + "-" + item.ID;
                            <div class="single-populer-post d-flex">
                                <img src="~/Assets/Client/img/news/@item.Image" style="width: 165px" alt="">
                                <div class="post-content">
                                    <a href="@url">
                                        <h6>@item.Title</h6>
                                    </a>
                                    <p>@item.CreatedDate.Value.ToString("dd"), Tháng @item.CreatedDate.Value.ToString("MM, yyyy")</p>
                                </div>
                            </div>
                        }
                       
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>


<section class="categories_area clearfix" id="about">
    <div class="container">
        <div class="row">
            <div class="col-12 col-md-6 col-lg-4">
                <div class="single_catagory wow fadeInUp" data-wow-delay=".3s">
                    <img src="~/Assets/Client/img/food/Tiec-bao-hypng.png" alt="">
                    <div class="catagory-title">
                        <a href="/lien-he?type=Tiệc%20báo%20hỷ">
                            <h5>Tiệc báo hỷ</h5>
                        </a>
                    </div>
                </div>
            </div>

            <div class="col-12 col-md-6 col-lg-4">
                <div class="single_catagory wow fadeInUp" data-wow-delay=".6s">
                    <img src="~/Assets/Client/img/food/Tiec hoi nghi.png" alt="">
                    <div class="catagory-title">
                        <a href="/lien-he?type=Tiệc%20hội%20nghị">
                            <h5>Tiệc hội nghị</h5>
                        </a>
                    </div>
                </div>
            </div>
            <div class="col-12 col-md-6 col-lg-4">
                <div class="single_catagory wow fadeInUp" data-wow-delay=".9s">
                    <img src="~/Assets/Client/img/food/tiec sinh nhat.png" alt="">
                    <div class="catagory-title">
                        <a href="/lien-he?type=Tiệc%20sinh%20nhật">
                            <h5>Tiệc sinh nhật</h5>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>