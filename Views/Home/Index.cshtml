                                    <a href="@url">
                                        <h6>Cá Chình nướng riềng mẻ đậm đà cho bữa cơm ngày mưa</h6>
                                    </a>
                                    <p>@item.CreatedDate.Value.ToString("dd"), Tháng @item.CreatedDate.Value.ToString("MM, yyyyy")</p>
                                </div>
                            </div>
                        }
                    </div>

                </div>
            </div>
